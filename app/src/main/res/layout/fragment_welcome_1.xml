<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_welcome"
    tools:context=".fragment.Welcome1Fragment">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_primary"
        app:layout_constraintBottom_toTopOf="@+id/gl_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_welcome_one"
        app:layout_constraintBottom_toBottomOf="@id/gl_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view_circle_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_circle_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@id/gl_divider"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_circle_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginEnd="-30dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/view_circle_two"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/noto_sans_kr_black"
        android:gravity="start"
        android:includeFontPadding="false"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:text="@string/used_goods_trading_shop_that_can_donate"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/color_primary"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/gl_divider" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto_sans_kr_black"
        android:gravity="start"
        android:includeFontPadding="false"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:text="@string/a_sale_can_soon_become_n_a_donation"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>