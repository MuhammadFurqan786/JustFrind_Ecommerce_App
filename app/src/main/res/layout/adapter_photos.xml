<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        android:scaleType="centerCrop"
        android:background="@color/color_light"
        android:src="@drawable/img_plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/iv_cancel"
        app:layout_constraintEnd_toEndOf="@id/iv_car"
        app:layout_constraintStart_toEndOf="@id/iv_car"
        app:layout_constraintTop_toTopOf="@id/iv_car"
        app:layout_constraintBottom_toTopOf="@id/iv_car"
        android:src="@drawable/ic_photo_cancel"
        android:elevation="1dp"
        android:translationZ="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>