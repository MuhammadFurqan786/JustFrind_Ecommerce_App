<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_welcome"
    tools:context=".fragment.Welcome3Fragment">

    <View
        android:id="@+id/view_bg_primary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_primary"
        app:layout_constraintBottom_toTopOf="@+id/gl_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_welcome_two"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:src="@drawable/img_welcome_three"
        app:layout_constraintBottom_toBottomOf="@id/gl_divider"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/noto_sans_kr_black"
        android:gravity="start"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:includeFontPadding="false"
        android:text="@string/non_face_to_face_safe_transaction"
        android:textColor="@color/color_primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/gl_divider" />


    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_black"
        android:text="@string/nearby_areas_can_be_transacted_nthrough_nearby_convenience_n_storesthere_is"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:textAlignment="textStart"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <View
        android:id="@+id/view_circle_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@id/gl_divider"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_circle_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginEnd="-30dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/view_circle_two"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/view_circle_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>